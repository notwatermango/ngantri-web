generator client {
    provider        = "prisma-client-js"
    previewFeatures = ["jsonProtocol"]
}

datasource db {
    // TODO: migrate to postgre
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model Account {
    id       String @id @default(cuid())
    email    String @unique
    password String
    role     Int
    // TODO: migrate to postgre
    // role     Role   @default(ADMIN)
}

